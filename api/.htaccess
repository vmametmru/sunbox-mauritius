# Allow large JSON POST bodies for PDF email attachments (base64-encoded PDF ~2-5 MB)
<IfModule mod_php.c>
  php_value post_max_size      20M
  php_value upload_max_filesize 20M
  php_value memory_limit        128M
  php_value max_execution_time  120
</IfModule>
<IfModule mod_php8.c>
  php_value post_max_size      20M
  php_value upload_max_filesize 20M
  php_value memory_limit        128M
  php_value max_execution_time  120
</IfModule>
